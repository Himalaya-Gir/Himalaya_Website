---
import Layout from '../../layouts/Layout.astro';
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import ResearchTimeline from '../../components/ResearchTimeline.astro';
import { t } from '../../i18n/translations';
import '../../styles/global.css';

const lang = 'fr';
---

<Layout title="DÃ©convolution de la Confiance et du Risque | Himalaya Girard">
	<LanguageSwitcher />
	<main class="min-h-screen">
		<!-- Hero Section -->
		<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 to-slate-100">
			<div class="max-w-4xl mx-auto px-6 text-center">
				<h1 class="text-5xl md:text-6xl font-bold text-[#475573] mb-6 leading-tight" set:html={t('hero.title', lang)} />
				<p class="text-xl md:text-2xl text-slate-600 mb-8 font-serif">
					{t('hero.subtitle', lang)}
				</p>
				<p class="text-lg text-slate-700 max-w-2xl mx-auto leading-relaxed" set:html={t('hero.intro', lang)} />

				<div class="mt-12 flex gap-4 justify-center">
					<a href="#question" class="px-8 py-3 bg-[#475573] text-white rounded-lg hover:bg-[#3a4660] transition-colors font-medium">
						{t('nav.explore', lang)}
					</a>
					<a href="#about" class="px-8 py-3 border-2 border-[#475573] text-[#475573] rounded-lg hover:bg-[#475573] hover:text-white transition-colors font-medium">
						{t('nav.about', lang)}
					</a>
				</div>
			</div>

			<!-- Scroll indicator -->
			<div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
				<svg class="w-6 h-6 text-[#475573]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
				</svg>
			</div>
		</section>

		<!-- The Question Section -->
		<section id="question" class="py-20 px-6 bg-white">
			<div class="max-w-5xl mx-auto">
				<h2 class="text-4xl font-bold text-[#475573] mb-8 text-center">
					{t('question.title', lang)}
				</h2>

				<div class="grid md:grid-cols-2 gap-8 mt-12">
					<!-- Trust Game -->
					<div class="p-8 border-2 border-slate-200 rounded-lg hover:border-[#D41F00] transition-colors">
						<h3 class="text-2xl font-bold text-[#D41F00] mb-4">{t('question.trust.title', lang)}</h3>
						<div class="space-y-3 text-slate-700">
							<p>{t('question.trust.step1', lang)}</p>
							<p set:html={t('question.trust.step2', lang)} />
							<p set:html={t('question.trust.step3', lang)} />
							<p set:html={t('question.trust.step4', lang)} />
						</div>
						<div class="mt-6 p-4 bg-slate-50 rounded-lg">
							<p class="text-sm font-semibold text-slate-600">{t('question.trust.uncertainty', lang)}</p>
							<p class="text-slate-700">{t('question.trust.uncertaintyDesc', lang)}</p>
						</div>
					</div>

					<!-- Risk Game -->
					<div class="p-8 border-2 border-slate-200 rounded-lg hover:border-[#475573] transition-colors">
						<h3 class="text-2xl font-bold text-[#475573] mb-4">{t('question.risk.title', lang)}</h3>
						<div class="space-y-3 text-slate-700">
							<p>{t('question.risk.step1', lang)}</p>
							<p set:html={t('question.risk.step2', lang)} />
							<p set:html={t('question.risk.step3', lang)} />
							<p set:html={t('question.risk.step4', lang)} />
						</div>
						<div class="mt-6 p-4 bg-slate-50 rounded-lg">
							<p class="text-sm font-semibold text-slate-600">{t('question.risk.uncertainty', lang)}</p>
							<p class="text-slate-700">{t('question.risk.uncertaintyDesc', lang)}</p>
						</div>
					</div>
				</div>

				<div class="mt-12 p-6 bg-gradient-to-r from-slate-50 to-slate-100 rounded-lg">
					<p class="text-lg text-slate-700 font-serif text-center">
						{t('question.quote', lang)}
					</p>
					<p class="text-sm text-slate-500 text-center mt-2">
						{t('question.quoteAuthor', lang)}
					</p>
				</div>
			</div>
		</section>

		<!-- Research Process Timeline -->
		<ResearchTimeline lang={lang} />

		<!-- About Section -->
		<section id="about" class="py-20 px-6 bg-slate-50">
			<div class="max-w-4xl mx-auto">
				<h2 class="text-4xl font-bold text-[#475573] mb-8">{t('about.title', lang)}</h2>

				<div class="prose prose-lg max-w-none">
					<p class="text-slate-700 leading-relaxed mb-6" set:html={t('about.intro', lang)} />

					<div class="grid md:grid-cols-3 gap-6 mt-12">
						<div class="text-center">
							<div class="text-3xl font-bold text-[#D41F00] mb-2">32</div>
							<div class="text-sm text-slate-600" set:html={t('about.stat1', lang)} />
						</div>
						<div class="text-center">
							<div class="text-3xl font-bold text-[#475573] mb-2">286</div>
							<div class="text-sm text-slate-600" set:html={t('about.stat2', lang)} />
						</div>
						<div class="text-center">
							<div class="text-3xl font-bold text-[#D41F00] mb-2">6</div>
							<div class="text-sm text-slate-600" set:html={t('about.stat3', lang)} />
						</div>
					</div>
				</div>

				<div class="mt-12 p-6 border-l-4 border-[#D41F00] bg-white">
					<p class="text-slate-700">
						<span class="font-semibold">{t('about.researcher', lang)}</span> Himalaya Girard<br/>
						<span class="font-semibold">{t('about.position', lang)}</span><br/>
						<span class="font-semibold">{t('about.institution', lang)}</span> {t('about.institutionName', lang)}<br/>
						<span class="font-semibold">{t('about.lab', lang)}</span> {t('about.labName', lang)}<br/>
						<span class="font-semibold">{t('about.supervisors', lang)}</span> {t('about.supervisorNames', lang)}
					</p>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="py-12 px-6 bg-[#475573] text-white">
			<div class="max-w-4xl mx-auto text-center">
				<p class="text-lg mb-4">Himalaya Girard</p>
				<p class="text-slate-300 mb-6">{t('footer.position', lang)}</p>
				<div class="flex justify-center gap-6">
					<a href="mailto:himalaya.girard@donders.ru.nl" class="hover:text-[#D41F00] transition-colors">
						Email
					</a>
					<a href="https://www.linkedin.com/in/himalaya-girard" target="_blank" rel="noopener" class="hover:text-[#D41F00] transition-colors">
						LinkedIn
					</a>
				</div>
				<p class="text-sm text-slate-400 mt-8">
					{t('footer.rights', lang)}
				</p>
			</div>
		</footer>
	</main>
</Layout>
