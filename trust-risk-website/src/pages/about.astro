---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import { t } from '../i18n/translations';
import '../styles/global.css';

const lang = 'en';
---

<Layout title="About | Himalaya Girard">
  <Navigation lang={lang} currentPath="/about" />

  <main class="min-h-screen bg-[#FFF9ED]">
    <!-- Hero Section -->
    <section class="py-20 px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="font-figtree text-5xl font-bold text-[#003049] mb-6">
          {t('about.title', lang)}
        </h1>
      </div>
    </section>

    <!-- Main Content -->
    <section class="py-16 px-6">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-lg max-w-none">
          <p class="font-figtree text-[#003049]/80 leading-relaxed mb-8 text-lg" set:html={t('about.intro', lang)} />

          <!-- Stats -->
          <div class="grid md:grid-cols-3 gap-8 my-16">
            <div class="text-center p-6 bg-[#003049] rounded-lg shadow-md">
              <div class="font-figtree text-5xl font-bold text-[#FFF9ED] mb-3">32</div>
              <div class="font-figtree text-sm text-[#669bbc] font-medium" set:html={t('about.stat1', lang)} />
            </div>
            <div class="text-center p-6 border-2 border-[#780000]/30 rounded-lg">
              <div class="font-figtree text-5xl font-bold text-[#780000] mb-3">286</div>
              <div class="font-figtree text-sm text-[#003049]/80 font-medium" set:html={t('about.stat2', lang)} />
            </div>
            <div class="text-center p-6 bg-[#003049] rounded-lg shadow-md">
              <div class="font-figtree text-5xl font-bold text-[#FFF9ED] mb-3">6</div>
              <div class="font-figtree text-sm text-[#669bbc] font-medium" set:html={t('about.stat3', lang)} />
            </div>
          </div>
        </div>

        <!-- Researcher Info -->
        <div class="mt-16 p-8 border-l-4 border-[#780000] bg-[#FFF9ED] rounded-r-lg shadow-md">
          <h2 class="font-figtree text-2xl font-bold text-[#003049] mb-6">Research Team</h2>
          <div class="space-y-4 text-[#003049]/80 text-lg">
            <div>
              <span class="font-figtree font-semibold text-[#780000]">{t('about.researcher', lang)}</span>
              <span class="font-figtree ml-2">Himalaya Girard</span>
            </div>
            <div>
              <span class="font-figtree font-semibold text-[#780000]">{t('about.position', lang)}</span>
            </div>
            <div class="pt-4 border-t border-[#669bbc]/30">
              <span class="font-figtree font-semibold text-[#780000]">{t('about.institution', lang)}</span>
              <span class="font-figtree ml-2">{t('about.institutionName', lang)}</span>
            </div>
            <div>
              <span class="font-figtree font-semibold text-[#780000]">{t('about.lab', lang)}</span>
              <span class="font-figtree ml-2">{t('about.labName', lang)}</span>
            </div>
            <div class="pt-4 border-t border-[#669bbc]/30">
              <span class="font-figtree font-semibold text-[#780000]">{t('about.supervisors', lang)}</span>
              <span class="font-figtree ml-2">{t('about.supervisorNames', lang)}</span>
            </div>
          </div>

          <!-- Contact Links -->
          <div class="mt-8 flex gap-4">
            <a
              href="mailto:himalaya.girard@donders.ru.nl"
              class="font-figtree px-6 py-3 bg-[#003049] text-[#FFF9ED] rounded-lg hover:bg-[#002033] transition-colors font-medium flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Email
            </a>
            <a
              href="https://www.linkedin.com/in/himalaya-girard"
              target="_blank"
              rel="noopener"
              class="font-figtree px-6 py-3 bg-[#780000] text-[#FFF9ED] rounded-lg hover:bg-[#5a0000] transition-colors font-medium flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z"/>
              </svg>
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="py-12 px-6 bg-[#003049] text-[#FFF9ED]">
    <div class="max-w-4xl mx-auto text-center">
      <p class="font-figtree text-lg mb-4 font-semibold">Himalaya Girard</p>
      <p class="font-figtree text-[#669bbc] mb-6">{t('footer.position', lang)}</p>
      <p class="font-figtree text-sm text-[#669bbc]/70 mt-8">
        {t('footer.rights', lang)}
      </p>
    </div>
  </footer>
</Layout>
