---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import { t } from '../i18n/translations';
import '../styles/global.css';

const lang = 'en';
---

<Layout title="About | Himalaya Girard">
  <Navigation lang={lang} currentPath="/about" />

  <main class="min-h-screen bg-[#FFF9ED]">
    <!-- Hero Section -->
    <section class="relative py-24 px-6 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-5 pointer-events-none">
        <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="grid-about" width="40" height="40" patternUnits="userSpaceOnUse">
              <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#003049" stroke-width="1"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#grid-about)" />
        </svg>
      </div>

      <div class="max-w-7xl mx-auto relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="inline-block px-4 py-2 bg-[#003049]/5 text-[#003049] rounded-lg text-sm font-bold uppercase tracking-widest mb-6 border border-[#003049]/10">
              About the Research
            </div>
            <h1 class="font-figtree text-5xl md:text-6xl font-bold text-[#003049] mb-8 leading-tight tracking-tight">
              {t('about.title', lang)}
            </h1>
            <div class="prose prose-lg max-w-none">
              <p class="font-figtree text-[#003049]/80 leading-relaxed text-xl font-light" set:html={t('about.intro', lang)} />
            </div>
          </div>
          
          <div class="relative hidden lg:block">
            <!-- Abstract Profile Composition -->
            <div class="relative aspect-square max-w-md mx-auto">
              <div class="absolute inset-0 bg-[#003049]/5 rounded-full opacity-20 blur-3xl transform translate-x-12"></div>
              <div class="relative bg-[#FFF9ED] border border-[#003049]/10 p-8 rounded-2xl shadow-2xl transform -rotate-2 hover:rotate-0 transition-transform duration-500">
                <div class="aspect-[4/5] bg-[#003049] rounded-lg overflow-hidden relative">
                  <!-- Profile Image -->
                  <img 
                    src="/images/profile.png" 
                    alt="Himalaya Girard" 
                    class="absolute inset-0 w-full h-full object-cover object-center"
                  />
                  <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-[#003049] to-transparent pt-20">
                    <div class="text-[#FFF9ED] font-bold text-xl">Himalaya Girard</div>
                    <div class="text-[#669bbc] text-sm font-medium uppercase tracking-wider">Researcher</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section class="py-16 px-6">
      <div class="max-w-4xl mx-auto">
        
        <!-- Preview Disclaimer -->
        <div class="mb-20 p-8 bg-[#FFF9ED] border border-[#003049]/10 border-l-4 border-l-[#780000] rounded-lg shadow-sm">
          <div class="flex items-start gap-4">
            <div class="p-3 bg-[#780000]/10 rounded-lg text-[#780000] hidden md:block">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
            <div>
              <h2 class="font-figtree text-2xl font-bold text-[#003049] mb-4">{t('about.previewTitle', lang)}</h2>
              <p class="font-figtree text-[#003049]/80 leading-relaxed mb-6" set:html={t('about.previewText', lang)} />
              <ul class="grid md:grid-cols-2 gap-4 mb-8 font-figtree text-[#003049]/80">
                <li class="flex items-center gap-3 p-3 bg-[#003049]/5 rounded-lg">
                  <span class="text-[#780000]">•</span>
                  <span>{t('about.previewItem1', lang)}</span>
                </li>
                <li class="flex items-center gap-3 p-3 bg-[#003049]/5 rounded-lg">
                  <span class="text-[#780000]">•</span>
                  <span>{t('about.previewItem2', lang)}</span>
                </li>
                <li class="flex items-center gap-3 p-3 bg-[#003049]/5 rounded-lg">
                  <span class="text-[#780000]">•</span>
                  <span>{t('about.previewItem3', lang)}</span>
                </li>
                <li class="flex items-center gap-3 p-3 bg-[#003049]/5 rounded-lg">
                  <span class="text-[#780000]">•</span>
                  <span>{t('about.previewItem4', lang)}</span>
                </li>
              </ul>
              <p class="font-figtree text-[#003049] leading-relaxed font-medium italic" set:html={t('about.previewContact', lang)} />
            </div>
          </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid md:grid-cols-3 gap-6 mb-20">
          <div class="group p-8 bg-[#003049] rounded-2xl shadow-lg hover:-translate-y-1 transition-transform duration-300 relative overflow-hidden">
            <div class="absolute top-0 right-0 p-8 opacity-10">
              <svg class="w-16 h-16 text-[#FFF9ED]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
            <div class="relative z-10">
              <div class="font-figtree text-6xl font-bold text-[#FFF9ED] mb-2">16</div>
              <div class="h-1 w-12 bg-[#669bbc] rounded-lg mb-4"></div>
              <div class="font-figtree text-sm text-[#FFF9ED]/80 font-medium leading-relaxed" set:html={t('about.stat1', lang)} />
            </div>
          </div>
          
          <div class="group p-8 bg-[#FFF9ED] border-2 border-[#003049]/10 rounded-2xl shadow-lg hover:-translate-y-1 transition-transform duration-300 relative overflow-hidden">
            <div class="absolute top-0 right-0 p-8 opacity-5">
               <svg class="w-16 h-16 text-[#003049]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path></svg>
            </div>
            <div class="relative z-10">
              <div class="font-figtree text-6xl font-bold text-[#780000] mb-2">286</div>
              <div class="h-1 w-12 bg-[#003049]/20 rounded-lg mb-4"></div>
              <div class="font-figtree text-sm text-[#003049]/80 font-medium leading-relaxed" set:html={t('about.stat2', lang)} />
            </div>
          </div>

          <div class="group p-8 bg-[#003049] rounded-2xl shadow-lg hover:-translate-y-1 transition-transform duration-300 relative overflow-hidden">
             <div class="absolute top-0 right-0 p-8 opacity-10">
              <svg class="w-16 h-16 text-[#FFF9ED]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
            </div>
            <div class="relative z-10">
              <div class="font-figtree text-6xl font-bold text-[#FFF9ED] mb-2">8</div>
              <div class="h-1 w-12 bg-[#669bbc] rounded-lg mb-4"></div>
              <div class="font-figtree text-sm text-[#FFF9ED]/80 font-medium leading-relaxed" set:html={t('about.stat3', lang)} />
            </div>
          </div>
        </div>

        <!-- Researcher Info & Contact -->
        <div class="bg-[#FFF9ED] border border-[#003049]/10 rounded-2xl overflow-hidden shadow-lg">
          <div class="grid md:grid-cols-5">
            <div class="md:col-span-2 bg-[#003049] p-8 text-[#FFF9ED] flex flex-col justify-center">
              <h2 class="font-figtree text-2xl font-bold mb-6">Affiliations</h2>
              <div class="space-y-6">
                <div>
                  <div class="text-[#669bbc] text-xs font-bold uppercase tracking-widest mb-1">{t('about.institution', lang)}</div>
                  <div class="font-figtree font-medium text-lg">{t('about.institutionName', lang)}</div>
                </div>
                <div>
                  <div class="text-[#669bbc] text-xs font-bold uppercase tracking-widest mb-1">{t('about.lab', lang)}</div>
                  <div class="font-figtree font-medium text-lg">{t('about.labName', lang)}</div>
                </div>
              </div>
            </div>
            
            <div class="md:col-span-3 p-8 flex flex-col justify-center">
              <h2 class="font-figtree text-2xl font-bold text-[#003049] mb-6">Research Team</h2>
              <div class="space-y-4 mb-8">
                 <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-[#003049]/5 flex items-center justify-center text-[#003049]">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                    </div>
                    <div>
                      <div class="text-xs font-bold text-[#003049]/40 uppercase tracking-widest">{t('about.researcher', lang)}</div>
                      <div class="font-figtree font-bold text-[#003049]">Himalaya Girard</div>
                    </div>
                 </div>
                 <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-[#003049]/5 flex items-center justify-center text-[#003049]">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
                    </div>
                    <div>
                      <div class="text-xs font-bold text-[#003049]/40 uppercase tracking-widest">{t('about.supervisors', lang)}</div>
                      <div class="font-figtree font-bold text-[#003049]">{t('about.supervisorNames', lang)}</div>
                    </div>
                 </div>
              </div>

              <div class="flex flex-wrap gap-4">
                <a
                  href="mailto:himalaya.girard@donders.ru.nl"
                  class="flex-1 min-w-[140px] px-6 py-3 bg-[#003049] text-[#FFF9ED] rounded-lg hover:bg-[#002033] transition-all hover:-translate-y-0.5 shadow-md hover:shadow-lg font-bold text-center flex items-center justify-center gap-2"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                  Email
                </a>
                <a
                  href="https://www.linkedin.com/in/himalaya-girard"
                  target="_blank"
                  rel="noopener"
                  class="flex-1 min-w-[140px] px-6 py-3 bg-[#780000] text-[#FFF9ED] rounded-lg hover:bg-[#5a0000] transition-all hover:-translate-y-0.5 shadow-md hover:shadow-lg font-bold text-center flex items-center justify-center gap-2"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z"/></svg>
                  LinkedIn
                </a>
              </div>
            </div>
          </div>
        </div>

      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="py-12 px-6 bg-[#003049] text-[#FFF9ED]">
    <div class="max-w-4xl mx-auto text-center">
      <p class="font-figtree text-lg mb-4 font-semibold">Himalaya Girard</p>
      <p class="font-figtree text-[#669bbc] mb-6">{t('footer.position', lang)}</p>
      <p class="font-figtree text-sm text-[#669bbc]/70 mt-8">
        {t('footer.rights', lang)}
      </p>
    </div>
  </footer>
</Layout>
